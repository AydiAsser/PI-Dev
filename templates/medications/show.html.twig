{% extends 'base.html.twig' %}

{% block title %}Medications{% endblock %}

{% block body %}
    <h1>Medications</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medication.id }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ medication.quantite }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ medication.prix }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ medication.name }}</td>
            </tr>
            <tr>
                <th>Disponibilite</th>
                <td>{{ medication.disponibilite ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Instruction_usage</th>
                <td>{{ medication.instructionUsage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_medications_index') }}">back to list</a>

    <a href="{{ path('app_medications_edit', {'id': medication.id}) }}">edit</a>

    {{ include('medications/_delete_form.html.twig') }}
{% endblock %}
