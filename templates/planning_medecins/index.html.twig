{% extends 'base.html.twig' %}

{% block title %}PlanningMedecins index{% endblock %}

{% block body %}
 <div class="bradcam_area breadcam_bg">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="bradcam_text">
                        <h3>planning</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h1>PlanningMedecins index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Jour_debut</th>
                <th>Jour_fin</th>
                <th>Heure_debut</th>
                <th>Heure_fin</th>
                <th>Disponibilite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planning_medecin in planning_medecins %}
            <tr>
                <td>{{ planning_medecin.id }}</td>
                <td>{{ planning_medecin.jourDebut }}</td>
                <td>{{ planning_medecin.jourFin }}</td>
                <td>{{ planning_medecin.heureDebut ? planning_medecin.heureDebut|date('H:i:s') : '' }}</td>
                <td>{{ planning_medecin.heureFin ? planning_medecin.heureFin|date('H:i:s') : '' }}</td>
                <td>{{ planning_medecin.disponibilite ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_planning_medecins_show', {'id': planning_medecin.id}) }}">show</a>
                    <a href="{{ path('app_planning_medecins_edit', {'id': planning_medecin.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_planning_medecins_new') }}">Create new</a>
{% endblock %}